<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="dashboard-page">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fab fa-facebook-f me-2"></i>
                Facebook Auto Tool
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login.html">
                            <i class="fas fa-plus"></i>
                            Add Session
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <% if (isAuthenticated) { %>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown">
                            <i class="fas fa-user"></i>
                            <%= currentUser || 'User' %>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#" onclick="Dashboard.loadSessions()">
                                <i class="fas fa-sync"></i> Refresh Sessions
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#" onclick="logout()">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </li>
                    <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login.html">
                            <i class="fas fa-sign-in-alt"></i>
                            Login
                        </a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <h1 class="display-5 font-weight-bold">
                        <i class="fas fa-rocket"></i>
                        Facebook Auto Tool Dashboard
                    </h1>
                    <p class="lead">Manage your Facebook automation campaigns with ease</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-users fa-2x text-primary"></i>
                        </div>
                        <div class="ml-3">
                            <div class="stat-number" id="sessionsCount"><%= sessionsCount %></div>
                            <div class="stat-label">Active Sessions</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-database fa-2x text-success"></i>
                        </div>
                        <div class="ml-3">
                            <div class="stat-number"><%= mongoEnabled ? 'ON' : 'OFF' %></div>
                            <div class="stat-label">MongoDB</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-bolt fa-2x text-warning"></i>
                        </div>
                        <div class="ml-3">
                            <div class="stat-number" id="actionsToday">0</div>
                            <div class="stat-label">Actions Today</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon">
                            <i class="fas fa-chart-line fa-2x text-info"></i>
                        </div>
                        <div class="ml-3">
                            <div class="stat-number" id="successRate">0%</div>
                            <div class="stat-label">Success Rate</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Left Column: Sessions Management -->
            <div class="col-lg-4">
                <div class="card shadow-soft">
                    <div class="card-header bg-facebook text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-users"></i>
                            Active Sessions
                            <button class="btn btn-sm btn-outline-light float-right" onclick="Dashboard.loadSessions()" id="refreshSessions">
                                <i class="fas fa-sync"></i>
                            </button>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div id="sessionsContainer">
                            <!-- Sessions will be loaded here dynamically -->
                            <div class="text-center py-4">
                                <div class="spinner"></div>
                                <p class="text-muted mt-2">Loading sessions...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Middle Column: Action Form -->
            <div class="col-lg-4">
                <div class="card shadow-soft">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-play"></i>
                            Perform Action
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id="actionForm">
                            <div class="form-group">
                                <label for="targetUrl">Target Facebook URL</label>
                                <input 
                                    type="url" 
                                    class="form-control" 
                                    id="targetUrl" 
                                    placeholder="https://facebook.com/..." 
                                    required
                                >
                                <small class="form-text text-muted">
                                    Enter the Facebook post or profile URL you want to interact with
                                </small>
                            </div>

                            <div class="form-group">
                                <label>Select Action</label>
                                <div class="action-select">
                                    <button type="button" class="btn btn-outline-primary btn-block" id="actionSelect">
                                        Select Action
                                    </button>
                                    <div class="action-dropdown" id="actionDropdown">
                                        <!-- Options will be populated by JavaScript -->
                                    </div>
                                </div>
                            </div>

                            <div class="comment-input" id="commentInput">
                                <div class="form-group">
                                    <label for="commentText">Comment Text</label>
                                    <textarea 
                                        class="form-control" 
                                        id="commentText" 
                                        rows="3" 
                                        placeholder="Enter your comment here..."
                                    ></textarea>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success btn-block">
                                <i class="fas fa-rocket"></i>
                                Execute Action
                            </button>
                        </form>

                        <!-- Action Status Messages -->
                        <div id="actionStatus" class="mt-3" style="display: none;">
                            <!-- Status messages will appear here -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Action History -->
            <div class="col-lg-4">
                <div class="card shadow-soft">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-history"></i>
                            Recent Actions
                            <button class="btn btn-sm btn-outline-light float-right" onclick="Dashboard.clearActionHistory()" id="clearHistory">
                                <i class="fas fa-trash"></i>
                            </button>
                        </h5>
                    </div>
                    <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                        <div id="actionHistoryContainer">
                            <!-- Action history will be loaded here dynamically -->
                            <div class="text-center py-4">
                                <i class="fas fa-history fa-3x text-muted mb-3"></i>
                                <h6 class="text-muted">No action history yet</h6>
                                <p class="text-muted">Start performing actions to see history here</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Features Row -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-soft">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-cogs"></i>
                            Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <button class="btn btn-outline-primary btn-block" onclick="validateAllSessions()">
                                    <i class="fas fa-check-circle"></i>
                                    Validate All Sessions
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-warning btn-block" onclick="exportSessions()">
                                    <i class="fas fa-download"></i>
                                    Export Sessions
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-info btn-block" onclick="importSessions()">
                                    <i class="fas fa-upload"></i>
                                    Import Sessions
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-secondary btn-block" onclick="showConfigModal()">
                                    <i class="fas fa-sliders-h"></i>
                                    Settings
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer bg-dark text-light py-3 mt-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2024 Facebook Auto Tool. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-right">
                    <p class="mb-0">
                        <i class="fas fa-server"></i> 
                        Sessions: <span id="footerSessionCount"><%= sessionsCount %></span> | 
                        <i class="fas fa-database"></i> 
                        MongoDB: <%= mongoEnabled ? 'Enabled' : 'Disabled' %>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/script.js"></script>

    <script>
        // Initialize Dashboard
        $(document).ready(function() {
            Dashboard.init();
        });

        // Additional dashboard functions
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                fetch('/auth/logout', { method: 'POST' })
                    .then(() => {
                        window.location.href = '/';
                    })
                    .catch(console.error);
            }
        }

        function validateAllSessions() {
            FBAutoTool.utils.showMessage('Feature coming soon!', 'info');
        }

        function exportSessions() {
            FBAutoTool.utils.showMessage('Feature coming soon!', 'info');
        }

        function importSessions() {
            FBAutoTool.utils.showMessage('Feature coming soon!', 'info');
        }

        function showConfigModal() {
            FBAutoTool.utils.showMessage('Feature coming soon!', 'info');
        }

        // Auto-refresh session count in footer
        setInterval(() => {
            const sessionCount = Dashboard.currentSessions.length;
            document.getElementById('footerSessionCount').textContent = sessionCount;
            document.getElementById('sessionsCount').textContent = sessionCount;
        }, 5000);
    </script>
</body>
</html>